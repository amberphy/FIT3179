{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Hotel Guests by States",
    "width": 600,
    "height": 350,
    "projection": {
      "type": "mercator"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/ne_10m_admin_1_states_provinces.json",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_admin_1_states_provinces"
      }
    },
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white",
          "strokeWidth": 0.5
        },
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/hotel_guests_by_states.csv"
              },
              "key": "City",
              "fields": [
                "Visitors"
              ]
            },
            "default": null
          },
          {
            "calculate": "isValid(datum.Tourist_arrivals) && datum.Tourist_arrivals > 0 ? datum.Tourist_arrivals : 100",
            "as": "Tourist_arrivals"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 0.8
        },
        "encoding": {
          "color": {
            "condition": {
              "test": "datum.Tourist_arrivals === null",
              "value": "#d3d3d3"
            },
            "field": "Tourist_arrivals",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "domain": [
                300,
                900,
                6000,
                9000,
                15000
              ]
            },
            "legend": {
              "title": "Log of Tourist Arrivals (thousands)",
              "orient": "bottom",
              "direction": "horizontal",
              "columns": 6,
              "labelLimit": 400,
              "symbolSize": 300
            }
          },
          "tooltip": [
            {
              "field": "properties.NAME",
              "type": "nominal",
              "title": "Country"
            },
            {
              "field": "Tourist_arrivals",
              "type": "quantitative",
              "title": "Tourist/Visitor Arrivals (thousands)"
            }
          ]
        }
      }
    ]
  }