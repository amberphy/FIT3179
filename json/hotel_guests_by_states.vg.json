{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Hotel Guests Arrivals in Malaysia by States",
    "font": "Orbitron",
    "fontSize": 18,
    "fontWeight": "bold",
    "offset": 20
  },
  "repeat": {
    "column": [
      "DOMESTIC",
      "FOREIGNER"
    ]
  },
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "background": "#eaeaea",
  "data": {
    "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/hotel_guests_by_states.csv"
  },
  "params": [
    {
      "name": "Year",
      "value": 2022,
      "bind": {
        "input": "radio",
        "options": [
          2019,
          2021,
          2022
        ],
        "labels": [
          "2019",
          "2021",
          "2022"
        ],
        "name": "Year Selection: "
      }
    }
  ],
  "spec": {
    "width": 600,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/hotel_guests_by_states.csv"
    },
    "transform": [
      {
        "filter": "datum.Year == Year"
      },
      {
        "lookup": "City",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/ne_10m_admin_1_states_provinces.json",
            "format": {
              "type": "topojson",
              "feature": "ne_10m_admin_1_states_provinces"
            }
          },
          "key": "properties.name"
        },
        "as": "geo"
      }
    ],
    "projection": {
      "type": "equalEarth"
    },
    "mark": {
      "type": "geoshape",
      "stroke": "white",
      "strokeWidth": 0.8
    },
    "encoding": {
      "shape": {
        "field": "geo",
        "type": "geojson"
      },
      "color": {
        "field": {
          "repeat": "column"
        },
        "type": "quantitative",
        "scale": {
          "scheme": "lightorange"
        },
        "legend": {
          "orient": "bottom",
          "direction": "horizontal",
          "columns": 6,
          "labelLimit": 400,
          "symbolSize": 300,
          "titleFont": "Outfit",
          "titleFontSize": 14,
          "labelFont": "Outfit",
          "labelFontSize": 12
        }
      },
      "tooltip": [
        {
          "field": "City",
          "type": "nominal",
          "title": "State"
        },
        {
          "field": {
            "repeat": "column"
          },
          "type": "quantitative",
          "title": [
            "Hotel Guests"
          ],
          "format": ","
        }
      ]
    }
  }
}