{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Domestic Tourists and Foreigners By States",
  "repeat": {"row": ["DOMESTIC", "FOREIGNER"]},
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/hotel_guests_by_states.csv"
    }, 
  "params": [
    {
      "name": "Year",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2019, 2021, 2022],
        "labels": ["2019","2021","2022"],
        "name": "Year Selection: "
      }
    }
  ],
  "spec": {
    "width": 500,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/hotel_guests_by_states.csv"
    }, 
    "transform": [
      {
        "filter": "datum.Year == Year"
      },
      {
        "lookup": "City",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/ne_10m_admin_1_states_provinces.json",
            "format": {
              "type": "topojson",
              "feature": "ne_10m_admin_1_states_provinces"
            }
          },
          "key": "properties.name"
        },
        "as": "geo"
      }
    ],
    "projection": {"type": "equalEarth"},
    "mark": "geoshape",
    "encoding": {
      "shape": {
        "field": "geo",
        "type": "geojson"
      },
      "color": {
        "field": {"repeat": "row"},
        "type": "quantitative"
      },
      "tooltip": [
        {
          "field": "City",
          "type": "nominal",
          "title": "State"
        },
        {
          "field": {"repeat": "row"},
          "type": "quantitative",
          "title": ["Tourists"]
        }
      ]
    }
  }
}
