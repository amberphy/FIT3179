{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Hotel Guests by States",
  "vconcat": [
    {
      "width": 600,
      "height": 350,
      "projection": {
        "type": "mercator"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/ne_10m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "layer": [
        {
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white",
            "strokeWidth": 0.5
          },
          "encoding": {
            "tooltip": {
              "field": "properties.NAME",
              "type": "nominal",
              "title": "State"
            }
          }
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/hotel_guests_by_states.csv"
                },
                "key": "City",
                "fields": ["TOTAL", "DOMESTIC", "FOREIGNER", "Year"]
              }
            },
            {
              "filter": "datum.Year == yearFilter && isFinite(datum.TOTAL) && datum.TOTAL > 0"
            },
            {
              "calculate": "datum.DOMESTIC / datum.TOTAL",
              "as": "percentage_domestic"
            },
            {
              "filter": "isFinite(datum.percentage_domestic)"
            }
          ],
          "mark": "circle",
          "encoding": {
            "color": {
              "field": "percentage_domestic",
              "type": "quantitative",
              "scale": {
                "scheme": "redblue"
              },
              "legend": {
                "title": "Domestic Guest %"
              }
            },
            "size": {
              "field": "TOTAL",
              "type": "quantitative",
              "title": "Total Hotel Guests"
            },
            "tooltip": [
              {"field": "City", "title": "State"},
              {"field": "TOTAL", "title": "Total Guests"},
              {"field": "DOMESTIC", "title": "Domestic Guests"},
              {"field": "FOREIGNER", "title": "Foreigner Guests"}
            ]
          }
        }
      ]
    },
    {
      "width": 600,
      "height": 200,
      "data": {
        "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/hotel_guests_by_states.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == yearFilter"
        },
        {
          "fold": ["DOMESTIC", "FOREIGNER"],
          "as": ["Guest Type", "Guest Count"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "City",
          "type": "nominal",
          "title": "State"
        },
        "y": {
          "field": "Guest Count",
          "type": "quantitative",
          "title": "Total Guests"
        },
        "color": {
          "field": "Guest Type",
          "type": "nominal",
          "scale": {
            "scheme": "set1"
          },
          "title": "Guest Type"
        }
      }
    }
  ],
  "params": [
    {
      "name": "yearFilter",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2019, 2021, 2022],
        "name": "Year: "
      }
    }
  ]
}
