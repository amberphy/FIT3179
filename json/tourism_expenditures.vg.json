{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Tourist Arrivals and Expenditures in 2021",
    "font": "Orbitron",
    "fontSize": 18,
    "fontWeight": "bold",
    "offset": 20
  },
  "width": 1000,
  "height": 550,
  "projection": {
    "type": "naturalEarth1",
    "center": {
      "expr": "center_to"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "background": "#eaeaea",
  "data": {
    "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/ne_50m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_0_countries"
    }
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 170,
      "bind": {
        "input": "range",
        "min": 170,
        "max": 500,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        0,
        0
      ],
      "bind": {
        "input": "radio",
        "options": [
          [
            0,
            0
          ],
          [
            14.5501,
            47.5162
          ],
          [
            86.6611,
            47.2129
          ],
          [
            103.8667,
            13.4125
          ],
          [
            37.9062,
            0.0236
          ],
          [
            -100.1667,
            48.1667
          ],
          [
            -51.9253,
            -14.2350
          ]
        ],
        "labels": [
          "World",
          "Europe",
          "Asia",
          "Southeast Asia",
          "Africa",
          "North America",
          "South America"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {
          "field": "note",
          "type": "nominal",
          "title": "Note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/tourism_data.csv"
            },
            "key": "Country",
            "fields": [
              "Tourist_arrivals",
              "Tourism_expenditure",
              "Year"
            ]
          },
          "default": null
        },
        {
          "filter": "datum.Year == 2021"
        },
        {
          "calculate": "isValid(datum.Tourist_arrivals) ? datum.Tourist_arrivals : null",
          "as": "Tourist_arrivals"
        },
        {
          "calculate": "isValid(datum.Tourism_expenditure) ? datum.Tourism_expenditure : null",
          "as": "Tourism_expenditure"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.8
      },
      "encoding": {
        "color": {
          "condition": {
            "test": "datum.Tourist_arrivals === null",
            "value": "#d3d3d3"
          },
          "field": "Tourist_arrivals",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [
              0,
              500,
              1000,
              5000,
              10000,
              45000,
              49000
            ]
          },
          "legend": {
            "title": "Tourist Arrivals (thousands)",
            "orient": "right",
            "direction": "vertical",
            "columns": 6,
            "labelLimit": 400,
            "symbolSize": 300,
            "titleFont": "Outfit",
            "titleFontSize": 14,
            "labelFont": "Outfit",
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Tourist_arrivals",
            "type": "quantitative",
            "title": "Tourist/Visitor Arrivals (thousands)",
            "format": ","
          },
          {
            "field": "Tourism_expenditure",
            "type": "quantitative",
            "title": "Expenditure (millions of US dollars)",
            "format": ","
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "country": "Malaysia",
            "lat": 4.2105,
            "lon": 101.9758,
            "arrivals": "135k"
          },
