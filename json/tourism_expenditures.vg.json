            "lon": -106.5348,
            "arrivals": "22,100k"
          },
          {
            "country": "Indonesia",
            "lat": -0.7893,
            "lon": 113.9213,
            "arrivals": "1,546k"
          },
          {
            "country": "France",
            "lat": 46.6034,
            "lon": 1.8883,
            "arrivals": "48,395k"
          }
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "color": "orange"
          },
          "encoding": {
            "longitude": {
              "field": "lon",
              "type": "quantitative"
            },
            "latitude": {
              "field": "lat",
              "type": "quantitative"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "dy": -10,
            "dx": 5,
            "color": "black",
            "fontSize": 12,
            "font":"Outfit"
          },
          "encoding": {
            "longitude": {
              "field": "lon",
              "type": "quantitative"
            },
            "latitude": {
              "field": "lat",
              "type": "quantitative"
            },
            "text": {
              "field": "country",
              "type": "nominal"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "dy": 10,
            "dx": 5,
            "color": "purple",
            "fontSize": 11,
            "font":"Outfit"
          },
          "encoding": {
            "longitude": {
              "field": "lon",
              "type": "quantitative"
            },
            "latitude": {
              "field": "lat",
              "type": "quantitative"
            },
            "text": {
              "field": "arrivals",
              "type": "nominal",
              "title": "Tourist Arrivals (thousands)"
            }
          }
        }
      ]
    },
    {
      "data": {
        "values": [
          {
