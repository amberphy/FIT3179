          }
          
          
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "dy": -10,
            "dx": 5,
            "color": "black",
            "fontSize": 12,
            "font":"Outfit"
          },
          "encoding": {
            "longitude": {
              "field": "long",
              "type": "quantitative"
            },
            "latitude": {
              "field": "lati",
              "type": "quantitative"
            },
            "text": {
              "field": "notes",
              "type": "nominal"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "dy": 10,
            "dx": 5,
            "color": "green",
            "fontSize": 11,
            "font":"Outfit"
          },
          "encoding": {
            "longitude": {
              "field": "long",
              "type": "quantitative"
            },
            "latitude": {
              "field": "lati",
              "type": "quantitative"
            },
            "text": {
              "field": "more",
              "type": "nominal",
              "format": {"expr": "replace(datum.more, '\\\\n', '\\n')"}
            }
          }
        }
      ]
    }
  ]
}