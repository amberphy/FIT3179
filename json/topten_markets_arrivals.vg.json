{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text": "TOP TEN MARKETS ARRIVALS", 
      "font": "Orbitron",
      "fontSize": 18,
      "fontWeight": "bold",
      "offset": 20
    },
    "description": "Vega-Lite version of bar chart from https://observablehq.com/@d3/learn-d3-scales.",
    "background": "#eaeaea",
    "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/MarketsArrivals.csv"
    },
    "params": [
      {
        "name": "Year",
        "value": 2022,
        "bind": {
          "input": "radio",
          "options": [2019, 2021, 2022],
          "labels": ["2019", "2021", "2022"],
          "name": "Year Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Country_Of_Nationality !== 'Total'"},
      {"filter": "datum.Year == Year"},
      {"calculate": "toNumber(datum.Arrivals)", "as": "Arrivals"},
      {"calculate": "toNumber(datum.Market_Share)", "as": "Market_Share"}
    ],
    "hconcat": [
      {
        "width": 600,
        "height": 400,
        "encoding": {
          "y": {
            "field": "Country_Of_Nationality",
            "type": "nominal",
            "sort": {"field": "Arrivals", "order": "descending"},
            "title": "Country of Nationality",
            "axis": {
              "labelFont": "Outfit",
              "labelFontSize": 12,
              "labelAngle": 0,
              "labelPadding": 10,
              "titleFont": "Outfit", 
              "titleFontSize": 12,
              "titlePadding": 20 }
          },
          "x": {
            "field": "Arrivals",
            "type": "quantitative",
            "title": "Tourist Arrivals to Malaysia",
            "axis": {
              "labelFont": "Outfit",
              "labelFontSize": 12,
              "labelAngle": 0,
              "labelPadding": 10,
              "titleFont": "Outfit", 
              "titleFontSize": 12,
              "titlePadding": 20 
            }
          },
          "tooltip": [
            {"field": "Country_Of_Nationality", "title": "Country"},
            {"field": "Arrivals", "title": "Arrivals", "format": ","}
          ]
        },
        "layer": [
          {
            "mark": "bar",
            "encoding": {
              "color": {
                "field": "Arrivals",
                "type": "quantitative",
                "title": "Number of tourists",
                "legend": null
              }
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "right",
              "xOffset": 60,
              "aria": false,
              "font": "Outfit",
              "fontSize": 12
            },
            "encoding": {
              "text": {
                "field": "Arrivals",
                "type": "quantitative",
                "format": ",",
                "formatType": "number"
          
              },
              "color": {
                "condition": {
                  "test": {"field": "Arrivals", "gt": 10},
                  "value": "darkblue"
                },
                "value": "black"
              }
            }
          }
        ]
      },
      {
        "description": "Pie Chart with percentage_tooltip and arrow annotations",
        "title": {
          "text": "Market Shares in Malaysia",
          "font": "Orbitron",
          "fontSize": 18,
          "fontWeight": "bold",
          "offset": 20
        },
        "data": {
          "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/MarketsArrivals.csv"
        },
        "transform": [
          {"filter": "datum.Country_Of_Nationality !== 'Total'"},
          {"filter": "datum.Year == Year"},
          {"calculate": "toNumber(datum.Arrivals)", "as": "Arrivals"},
          {"calculate": "toNumber(datum.Market_Share)", "as": "Market_Share"}
        ],
        "width": 300,
        "height": 300,
        "layer": [
          {
            "mark": {
              "type": "arc",
              "tooltip": true
            },
            "encoding": {
              "theta": {
                "field": "Market_Share",
                "type": "quantitative",
                "stack": "normalize"              
              },
              "color": {
                "field": "Country_Of_Nationality",
                "type": "nominal",
                "title": "Country of Nationality",
                "legend": {
                  "orient": "bottom",
                  "direction": "horizontal",
                  "columns": 4,
                  "symbolSize": 200,
                  "titleFont": "Outfit",
                  "titleFontSize": 14,
                  "labelFont": "Outfit",
                  "labelFontSize": 12,
                  "labelLimit": 0,
                  "labelPadding": 20

                }
              },
              "tooltip": [
                {
                  "field": "Country_Of_Nationality",
                  "title": "Country of Nationality"
                },
                {
                  "field": "Arrivals",
                  "title": "Tourist Arrivals",
                  "format": ","
                },
                {
                  "field": "Market_Share",
                  "title": "Market Share (%)",
                  "format": ","
                }
              ]
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": 10,
              "dy": -5
            },
            "encoding": {
              "text": {
                "field": "Market_Share",
                "type": "quantitative",
                "format": ".1f"

              },
              "theta": {
                "field": "Market_Share",
                "type": "quantitative",
                "stack": "normalize"             
               },
              "radius": {
                "value": 120
              },
              "color": {
                "value": "black"
              }
            }
          },
          {
            "mark": {
              "type": "rule",
              "color": "gray",
              "strokeWidth": 1
            },
            "encoding": {
              "theta": {
                "field": "Market_Share",
                "type": "quantitative",
                "stack": "normalize"
              },
              "radius": {
                "value": 110
              },
              "theta2": {
                "value": 0
              }
            }
          }
        ]
      }
      
    ]
  }