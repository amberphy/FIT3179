{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text": "TOP TEN MARKETS ARRIVALS", 
      "font": "Orbitron",
      "fontSize": 18,
      "fontWeight": "bold",
      "offset": 0
    },
    "description": "Vega-Lite version of bar chart from https://observablehq.com/@d3/learn-d3-scales.",
    "background": "transparent",
    "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/MarketsArrivals.csv"
    },
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "padding": {"left": 25, "right": 25, "top": 10, "bottom": 10},
    "params": [
      {
        "name": "Year",
        "value": 2022,
        "bind": {
          "input": "radio",
          "options": [2019, 2021, 2022],
          "labels": ["2019", "2021", "2022"],
          "name": "Year Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Country_Of_Nationality !== 'Total'"},
      {"filter": "datum.Year == Year"},
      {"calculate": "toNumber(datum.Arrivals)", "as": "Arrivals"}    ],
    "hconcat": [
      {
        "width": 600,
        "height": 400,
        "encoding": {
          "y": {
            "field": "Country_Of_Nationality",
            "type": "nominal",
            "sort": {"field": "Arrivals", "order": "descending"},
            "title": "Country of Nationality",
            "axis": {
              "labelFont": "Outfit",
              "labelFontSize": 12,
              "labelAngle": 0,
              "labelPadding": 10,
              "titleFont": "Outfit", 
              "titleFontSize": 12,
              "titlePadding": 10 }
          },
          "x": {
            "field": "Arrivals",
            "type": "quantitative",
            "title": "Tourist Arrivals to Malaysia",
            "axis": {
              "labelFont": "Outfit",
              "labelFontSize": 12,
              "labelAngle": 0,
              "labelPadding": 10,
              "titleFont": "Outfit", 
              "titleFontSize": 12,
              "titlePadding": 20 
            }
          },
          "tooltip": [
            {"field": "Country_Of_Nationality", "title": "Country"},
            {"field": "Arrivals", "title": "Arrivals", "format": ","}
          ]
        },
        "layer": [
          {
            "mark": "bar",
            "encoding": {
              "color": {
                "field": "Arrivals",
                "type": "quantitative",
                "title": "Number of tourists",
                "legend": null
              }
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "right",
              "xOffset": 55,
              "aria": false,
              "font": "Outfit",
              "fontSize": 12
            },
            "encoding": {
              "text": {
                "field": "Arrivals",
                "type": "quantitative",
                "format": ",",
                "formatType": "number"
          
              },
              "color": {
                "condition": {
                  "test": {"field": "Arrivals", "gt": 10},
                  "value": "darkblue"
                },
                "value": "black"
              }
            }
          }
        ]
      },
      {
        "description": "Pie Chart with percentage_tooltip and arrow annotations",
        "title": {
          "text": "Market Shares in Malaysia",
          "font": "Orbitron",
          "fontSize": 18,
          "fontWeight": "bold",
          "offset": 20
        },
        "data": {
          "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/MarketsArrivals.csv"
        },
        "transform": [
          {"filter": "datum.Country_Of_Nationality !== 'Total'"},
          {"filter": "datum.Year == Year"},
          {"calculate": "toNumber(datum.Arrivals)", "as": "Arrivals"}
        ],
        "width": 300,
        "height": 300,
        "mark": {
          "type": "arc",
          "tooltip": true
        },
        "encoding": {
          "theta": {
            "field": "Market_Share",
            "type": "quantitative",
            "stack": "normalize"              
          },
          "color": {
            "field": "Country_Of_Nationality",
            "type": "nominal",
            "title": "Country of Nationality",
            "legend": {
              "orient": "bottom",
              "direction": "horizontal",
              "columns": 4,
              "symbolSize": 200,
              "titleFont": "Outfit",
              "titleFontSize": 14,
              "labelFont": "Outfit",
              "labelFontSize": 12,
              "labelLimit": 0,
              "labelPadding": 20

            }
          },
          "tooltip": [
            {
              "field": "Country_Of_Nationality",
              "title": "Country of Nationality"
            },
            {
              "field": "Arrivals",
              "title": "Tourist Arrivals",
              "format": ","
            },
            {
              "field": "Market_Share",
              "title": "Market Share (%)",
              "format": ","
            }
          ]
        }
      }
    ]
  }