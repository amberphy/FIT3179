{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": {"text": "Tourist Arrivals to Malaysia across Region, Year, and Quarter",
      "font": "Orbitron",
      "fontSize": 18,
      "fontWeight": "bold",
      "offset": 20
    },
    "background": "#eaeaea",
    "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/datasets/quarterly_arrivals_malaysia_data.csv"
    },
    "params": [
      {
        "name": "Year_selection",
        "value": 2019,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2020,
          "step": 1,
          "name": "Year: "
        }
      },
      {
        "name": "Region_selection",
        "bind": {
          "input": "select",
          "options": [null, "ASIA", "EUROPE", "AFRICA", "AMERICAS", "OCEANIA"],
          "labels": ["Show All", "ASIA", "EUROPE", "AFRICA", "AMERICAS", "OCEANIA"],
          "name": "Region Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "Year_selection == null || datum.Year == Year_selection"
      },
      {
        "filter": "Region_selection == null || datum.Region == Region_selection"
      },
      {
        "calculate": "datum.Tourist_Arrivals > 700000 ? 800000 : datum.Tourist_Arrivals",
        "as": "Adjusted_Tourist_Arrivals"
      }
    ],
    "encoding": {
      "x": {
        "field": "Quarter",
        "type": "ordinal",
        "axis": {"title": "Quarter",
          "labelFont": "Outfit",
          "labelFontSize": 12,
          "labelAngle": 0,
          "titleFont": "Outfit",
          "titleFontSize": 12}
      },
      "y": {
        "field": "Adjusted_Tourist_Arrivals",
        "type": "quantitative",
        "axis": {"title": "Tourist Arrivals",
        "labelFont": "Outfit",
        "labelFontSize": 12}
      },
      "color": {
        "field": "Region",
        "type": "nominal",
        "scale": {
          "domain": ["ASIA", "EUROPE", "AFRICA", "AMERICAS", "OCEANIA"],
          "range": ["#377eb8", "#ff7f00", "#984ea3", "#4daf4a", "#e41a1c"]
        },
        "legend": {
          "symbolSize": 100,
          "titleFont": "Outfit",
          "titleFontSize": 14,
          "labelFont": "Outfit",
          "labelFontSize": 12
        }
      }
    },
    "layer": [
      {
        "mark": "line"
      },
      {
        "mark": "point",
        "encoding":{
          "tooltip": [
            {"field": "Region", "type": "nominal"},
            {"field": "Year", "type": "nominal"},
            {"field": "Quarter", "type": "nominal"},
            {"field": "Tourist_Arrivals", "type": "quantitative", "format": ",", "title":"Tourist Arrivals (thousands)"}
          ]
        }
      }
    ]
  }
  