{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 100,
    "title": "Tourist Arrivals by Region, Year, and Quarter",
    "data": {
      "url": "https://raw.githubusercontent.com/amberphy/FIT3179/refs/heads/main/quarterly_arrivals_malaysia_data.csv"
    },
    "params": [
      {
        "name": "Year_selection",
        "bind": {
          "input": "select",
          "options": [2015, 2016, 2017, 2018, 2019, 2020],
          "labels": ["2015","2016","2017","2018","2019", "2020"],
          "name": "Year Selection: "
        }
      },
      {
        "name": "Quarter_selection",
        "bind": {
          "input": "select",
          "options": [null, "Quarter1", "Quarter2", "Quarter3", "Quarter4"],
          "labels": ["Show All", "Q1", "Q2", "Q3", "Q4"],
          "name": "Quarter Selection: "
        }
      },
      {
        "name": "Region_selection",
        "bind": {
          "input": "select",
          "options": [null, "ASIA", "EUROPE", "AFRICA", "AMERICAS", "OCEANIA"],
          "labels": ["Show All", "ASIA", "EUROPE", "AFRICA", "AMERICAS", "OCEANIA"],
          "name": "Region Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "Year_selection == null || datum.Year == Year_selection"
      },
      {
        "filter": "Quarter_selection == null || datum.Quarter == Quarter_selection"
      },
      {
        "filter": "Region_selection == null || datum.Region == Region_selection"
      },
      {
        "calculate": "datum.Tourist_Arrivals > 400000 ? 500000 : datum.Tourist_Arrivals",
        "as": "Adjusted_Tourist_Arrivals"
      }
    ],
    "encoding": {
      "x": {
        "field": "Quarter",
        "type": "ordinal",
        "axis": {"title": "Quarter"}
      },
      "y": {
        "field": "Adjusted_Tourist_Arrivals",
        "type": "quantitative",
        "axis": {"title": "Tourist Arrivals"},
        "scale": {"domain": [0, 400000]} 
      },
      "color": {
        "field": "Region",
        "type": "nominal",
        "scale": {
          "domain": ["ASIA", "EUROPE", "AFRICA", "AMERICAS", "OCEANIA"],
          "range": ["#377eb8", "#ff7f00", "#984ea3", "#4daf4a", "#e41a1c"]
        }
      }
    },
    "layer": [
      {
        "mark": "line"
      },
      {
        "mark": "point",
        "encoding":{
          "tooltip": [
            {"field": "Region", "type": "nominal"},
            {"field": "Year", "type": "nominal"},
            {"field": "Quarter", "type": "nominal"},
            {"field": "Tourist_Arrivals", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }
  